<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ventana_Cursos_Ejer2">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="pregunta"
            android:textSize="29dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"></View>
        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tema:"
            android:textSize="20dp"
            android:layout_marginBottom="8dp"
            android:layout_margin="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="35dp"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imagengif1"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hola_d"
                    android:background="@color/white"
                    />
                <TextView
                    android:gravity="center"
                    android:id="@+id/numero1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imagengif2"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hola_d"
                    android:background="@color/white"
                    />
                    <TextView
                        android:id="@+id/numero2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >
<android.support.v7.widget.CardView
    android:id="@+id/card3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">'
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imagengif3"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:src="@drawable/hola_d"
        android:background="@color/white"
        />
        <TextView
            android:id="@+id/numero3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card4"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imagengif4"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hola_d"
                    android:background="@color/white"
                    />
                    <TextView
                        android:id="@+id/numero4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="4"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>
