<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/jje2"
    >
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/jje2"
       android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/rojo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            >
            <ImageView
                android:id="@+id/imagen_error"
                android:src="@drawable/imagenincorrecto"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:gravity="center"
                android:id="@+id/respuesta"
android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La Respuesta es:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"
                />

            <Button

                android:id="@+id/siguiente_incorrecto"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:background="@drawable/boton_incorrecto"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>